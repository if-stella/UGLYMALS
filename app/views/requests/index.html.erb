<div class="container">
  <h1 class="p-3 m-3">Booking requests for you:</h1>
  <% @requests.each do |request| %>
  <div class="p-4 mt-3 border-bottom ">
    <h5 class=""><%= request.user.email %> would like to book <%= request.animal.name %> from the <%= request.start_date %> until the <%= request.start_date %></h3>
    <p class="py-3">Status: <%= request.valid %>
    <% if request.status == 1 %>
      <i class="fa fa-solid fa-spinner"></i>
    <% elsif request.status == 0 %>
      <i class="fa fa-solid fa-thumbs-down"></i>
    <% else %>
      <i class="fa fa-solid fa-check-double"></i>
    <% end %>
    </p>
    <div class="cta mt-3 p-0"><%= link_to "Accept Booking", request_path(request, status: 2), method: :put %></div>
    <div class="cta mt-3 p-0"><%= link_to "Deny Booking", request_path(request, status: 0), method: :put %></div>
  </div>
  <% end %>
  <div class="cta m-5">
    <p><%= link_to "Back to my dashboard", dashboard_path %></p>
  </div>
</div>
